---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

const response = await fetch('https://jsonplaceholder.typicode.com/posts?_limit=2');
const posts_from_api = await response.json();
---

<Layout title="Astro Blog">
    <section class="page-content">
        <div class="container">
            { posts_from_api.map(post => (
                <div class="card">
                  <h2>{ post.title }</h2>
                  <p>{ post.body }</p>
                  <a href="post.html" class="btn">Read More</a>
                </div>
            ))}
        </div>
    </section>
</Layout>