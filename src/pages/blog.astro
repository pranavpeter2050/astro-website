---
import Layout from "../layouts/Layout.astro";
import Card2 from "../components/Card2.astro";
import Showcase from "../components/Showcase.astro";

const response = await fetch('https://jsonplaceholder.typicode.com/posts?_limit=2');
const posts_from_api = await response.json();

const posts = await Astro.glob('../posts/*.md');
---

<Layout title="Astro Blog">
    <Showcase heading="Astro Blog" text="A simple blog build with Astro" />

    <section class="page-content">
        <div class="container">
            { posts.map(post => (
                <Card2>
                    <h3>{ post.frontmatter.title }</h3>
                    <p>{ post.frontmatter.excerpt }</p>
                    <a class="btn" href={ `/${post.frontmatter.slug}` }>Read More</a>
                </Card2>
                ))}
            { posts_from_api.map(post => (
                <Card2>
                    <h3>{ post.title }</h3>
                    <p>{ post.excerpt }</p>
                </Card2>
            ))}
        </div>
    </section>
</Layout>